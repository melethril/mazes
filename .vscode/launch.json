  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Core Launch (console)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "dotnet: build",
      "program": "${workspaceFolder}/MazeTool/bin/Debug/net8.0/MazeTool.exe",
      "args": [
        "--outdir", "C:\\Users\\Martin\\Downloads\\Mazes",
        "--stylesfile", ".\\styles.json",
        "--maskfile", ".\\Masks\\doughnut.mask"
      ],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "console": "integratedTerminal"
    }
  ]
}
